<?xml version="1.0" encoding="utf-8"?>
<ItemRenderer NPCType="DiamondDestructoBoss" NPCTypeID="13">
	<Data>
		<Sprite name="iceSpikesSprite" fileName="game/npc1.rttex" textureSize="32" frame="31,8" />
		<Sprite name="slashSprite" fileName="game/npc1.rttex" textureSize="32" frame="29,8"/>
		<Sprite name="destructoSprite" fileName="game/npc2.rttex" textureSize="64" frame="0,2"/>
		<Sprite name="s_HitEffect" fileName="game/particles.rttex" textureSize="32" frame="10,9" />
		<StateMachines>
			<StateMachine name="NPC" ServerOnly="true"> 
				<States start="FlyPatrol">
					<NPCSpawn name="ShieldState" IsTemporary="true">
						<NpcTypeToSpawn>"Shield"</NpcTypeToSpawn>
						<NpcSpawnQuantity>1</NpcSpawnQuantity>
					</NPCSpawn>	
					<NPCFlyingPatrol name="FlyPatrol" ExitTime="5">
						<PatrolSpeed>80</PatrolSpeed>
						<PatrolRange>350</PatrolRange>
						<StayHome>false</StayHome>
					</NPCFlyingPatrol>
					<NPCFlyingDash name="SlamAttack" ExitTime="0.32">
						<DashVelocity>0, 400</DashVelocity>
					</NPCFlyingDash>
					<NPCStationary name="SlamAttackParticle" ExitTime="0.64"/>
					<NPCFlyingAttack name="AttackProjectile" ExitTime="1">
						<AttackTimeoutInSeconds>0</AttackTimeoutInSeconds>
						<ProjectileName>"DiamondDestructoProjectile"</ProjectileName>
					</NPCFlyingAttack>
					<NPCStationary name="SlashWave" ExitTime="1"/>
					<NPCAnticipation name="AnticipationSlam" ExitTime="0.64"/>
					<NPCAnticipation name="AnticipationSlashWave" ExitTime="0.64"/>
					<NPCAnticipation name="AnticipationProjectileAttack" ExitTime="0.64"/>
				</States>
				<Transitions>
					<Transition to="FlyPatrol" from="ShieldState|SlamAttackParticle|AttackProjectile|SlashWave"/>				
					<Transition to="AnticipationSlam" from="FlyPatrol">
						<Condition>
							<CheckRandomRangeNumber EndNumber="4">0</CheckRandomRangeNumber>
						</Condition>
					</Transition>					
					<Transition to="SlamAttack" from="AnticipationSlam"/>							
					<Transition to="SlamAttackParticle" from="SlamAttack">
						<Condition>
							<IsOnGround>true</IsOnGround>
						</Condition>
					</Transition>	
					<Transition to="AnticipationSlashWave" from="FlyPatrol">
						<Condition>
							<CheckRandomRangeNumber EndNumber="4">1</CheckRandomRangeNumber>
						</Condition>
					</Transition>
					<Transition to="SlashWave" from="AnticipationSlashWave"/>					
					<Transition to="AnticipationProjectileAttack" from="FlyPatrol">
						<Condition>
							<CheckRandomRangeNumber EndNumber="4">2</CheckRandomRangeNumber>
						</Condition>
					</Transition>
					<Transition to="AttackProjectile" from="AnticipationProjectileAttack"/>
					<Transition to="ShieldState" from="FlyPatrol">
						<Condition type="and">
							<CheckRandomRangeNumber operatorType="Less" EndNumber="101">30</CheckRandomRangeNumber>
							<CheckNumberAttachedEntities operatorType="Less">1</CheckNumberAttachedEntities>
						</Condition>
					</Transition>
				</Transitions>
			</StateMachine>
		</StateMachines>
		<Animations>
			<SpriteAnimation name="a_sprite_default" playOnState="NPC.FlyPatrol" sprite="destructoSprite" isLoop="true" animTime="300">
				<Frame>0, 3</Frame>
				<Frame>1, 3</Frame>
				<Frame>2, 3</Frame>
			</SpriteAnimation>				
			<SpriteAnimation name="c_sprite_AnticipationSlam" playOnState="NPC.AnticipationSlam" sprite="destructoSprite" isLoop="true" animTime="100">
				<Frame>4, 4</Frame>
			</SpriteAnimation>					
			<SpriteAnimation name="e_sprite_AnticipationSlashWave" sprite="destructoSprite" playOnState="NPC.AnticipationSlashWave" isLoop="true" animTime="100">
				<Frame>0, 4</Frame>
			</SpriteAnimation>
			<SpriteAnimation name="f_sprite_AnticipationProjectileAttack" playOnState="NPC.AnticipationProjectileAttack" sprite="destructoSprite" isLoop="false" animTime="600">
				<Frame>0, 2</Frame>
				<Frame>1, 2</Frame>
				<Frame>2, 2</Frame>
				<Frame>3, 2</Frame>
				<Frame>4, 2</Frame>
				<Frame>5, 2</Frame>
			</SpriteAnimation>
			
			<SpriteAnimation name="h_sprite_AttackProjectile_attack" playOnState="NPC.AttackProjectile" sprite="destructoSprite" isLoop="false" animTime="50">
				<Frame>4, 4</Frame>
			</SpriteAnimation>
			<SpriteAnimation name="h_sprite_SlashWave_attack" playOnState="NPC.SlashWave" sprite="destructoSprite" isLoop="true" animTime="50">
				<Frame>1, 4</Frame>
			</SpriteAnimation>
			<SpriteAnimation name="h_sprite_SlamAttack_attack" playOnState="NPC.SlamAttack" sprite="destructoSprite" isLoop="false" animTime="50">
				<Frame>3, 4</Frame>
			</SpriteAnimation>
		</Animations>
		<ParticleSystems>
