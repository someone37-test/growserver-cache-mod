				</Emitter>
				<Particle usePlayerFacing="true">
					<Select name="offset" input="particleIndex">
						<Item>-5,48</Item>
						<Item>-15,48</Item>
						<Item>-45,48</Item>
						<Item>-75,48</Item>
						<Item>-90,48</Item>
