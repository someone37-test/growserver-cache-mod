        <Frame>8,10</Frame>
        <Frame>9,10</Frame>
        <Frame>10,10</Frame>
        <Frame>11,10</Frame>
      </SpriteAnimation>      
		
	  <SpriteAnimation name="wingJump" sprite="s_wing" playOnState="Action.JumpStraight" isLoop="false" animTime="300">
        <Frame>15,10</Frame>
        <Frame>14,10</Frame>
        <Frame>12,10</Frame>
        <Frame>13,10</Frame>
      </SpriteAnimation>

		<SpriteAnimation name="wingFall" sprite="s_wing" playOnState="Action.FallStraight" isLoop="false" animTime="100">
			<Frame>13,10</Frame>
			<Frame>12,10</Frame>
			<Frame>14,10</Frame>
			<Frame>15,10</Frame>
		</SpriteAnimation>
    </Animations>

