        <Frame>11, 7</Frame>
        <Frame>12, 7</Frame>
        <Frame>13, 7</Frame>
        <Frame>14, 7</Frame>
      </SpriteAnimation>
      <SpriteAnimation name="foot1_move_anim" sprite="foot1_sprite" animTime="1500" isLoop="true" playOnState="playerState.Move">
        <Frame>0, 8</Frame>
        <Frame>1, 8</Frame>
        <Frame>2, 8</Frame>
        <Frame>3, 8</Frame>
        <Frame>4, 8</Frame>
        <Frame>5, 8</Frame>
