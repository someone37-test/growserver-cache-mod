        <Frame>12, 8</Frame>
        <Frame>13, 8</Frame>
        <Frame>14, 8</Frame>
      </SpriteAnimation>
      <SpriteAnimation name="foot2_move_anim" sprite="foot2_sprite" animTime="1500" isLoop="true" playOnState="playerState.Move">
        <Frame>0, 9</Frame>
        <Frame>1, 9</Frame>
        <Frame>2, 9</Frame>
        <Frame>3, 9</Frame>
        <Frame>4, 9</Frame>
        <Frame>5, 9</Frame>
        <Frame>6, 9</Frame>
        <Frame>7, 9</Frame>
        <Frame>8, 9</Frame>
        <Frame>9, 9</Frame>
        <Frame>10, 9</Frame>
        <Frame>11, 9</Frame>
        <Frame>12, 9</Frame>
        <Frame>13, 9</Frame>
        <Frame>14, 9</Frame>
      </SpriteAnimation>
      <SpriteAnimation name="foot1_punch_anim" sprite="foot1_sprite" animTime="400" isLoop="true" playOnState="playerState.Punch">
        <Frame>0, 10</Frame>
        <Frame>1, 10</Frame>
        <Frame>2, 10</Frame>
        <Frame>3, 10</Frame>
      </SpriteAnimation>
      <SpriteAnimation name="foot2_punch_anim" sprite="foot2_sprite" animTime="400" isLoop="true" playOnState="playerState.Punch">
        <Frame>0, 11</Frame>
