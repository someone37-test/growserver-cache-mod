        <Frame>11, 6</Frame>
        <Frame>12, 6</Frame>
        <Frame>13, 6</Frame>
        <Frame>14, 6</Frame>
      </SpriteAnimation>
      <SpriteAnimation name="foot2_idle_anim" sprite="foot2_sprite" animTime="1500" isLoop="true" playOnState="playerState.Idle">
        <Frame>0, 7</Frame>
        <Frame>1, 7</Frame>
        <Frame>2, 7</Frame>
        <Frame>3, 7</Frame>
        <Frame>4, 7</Frame>
        <Frame>5, 7</Frame>
